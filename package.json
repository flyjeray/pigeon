{
  "name": "pigeon",
  "version": "1.0.0",
  "description": "Pigeon is an end-to-end encrypted messaging app",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:encryption && npm run build:wrapper && npm run build:frontend",
    "build:wrapper": "npm run build --workspace=pigeon-supabase-wrapper",
    "build:frontend": "npm run build --workspace=pigeon-front-react",
    "build:encryption": "npm run build --workspace=pigeon-clientside-encryption",
    "dev": "npm run build:wrapper && npm run build:encryption && npm run dev --workspace=pigeon-front-react",
    "dev:wrapper": "npm run watch --workspace=pigeon-supabase-wrapper",
    "dev:frontend": "npm run dev --workspace=pigeon-front-react",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "npm run preview --workspace=pigeon-front-react",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "workspaces": [
    "pigeon-front-react",
    "pigeon-supabase-wrapper",
    "pigeon-clientside-encryption"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "prettier": "^3.4.2",
    "typescript-eslint": "^8.45.0"
  }
}
